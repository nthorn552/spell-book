{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/dist/server.js"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Spell Book",
      "processId": "${command:PickProcess}"
    },
    {
      "name": "Server Debug",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/server.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
